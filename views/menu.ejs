<div class="container mt-5">
    <h1 class="text-center">Daftar Menu</h1>

    <ul class="list-group">
        <% produk.forEach(p => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1"><strong><%= p.namapaket %></strong></h5>
                    <p class="mb-1 text-muted">Stok: <%= p.stok %></p>
                    <p class="mb-0 text-muted">Harga: Rp <%= p.harga.toLocaleString() %></p>
                </div>
                <div>
                    <img src="/uploads/fotobunga.jpg" class="card-img-top" alt="<%= produk.namapaket %>">
                </div>
            </li>
        <% }); %>
    </ul>

</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>

</body>
</html>
